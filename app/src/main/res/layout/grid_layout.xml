<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        app:cardElevation="10dp"
        app:contentPadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/state_imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_baseline_check_circle_outline_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/task_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="09:50"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_baseline_pending_actions_24"
                app:layout_constraintTop_toBottomOf="@id/task_title"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Title"
                android:textStyle="bold"
                android:textSize="18sp"
                android:lines="2"
                android:maxWidth="90dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/state_imageView"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageButton
                android:id="@+id/remove_imageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@android:drawable/ic_menu_delete"
                android:backgroundTint="@color/white"
                android:tint="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:tooltipText="Supprimer"/>

            <TextView
                android:id="@+id/user_atached"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_baseline_account_circle_24"
                app:layout_constraintTop_toBottomOf="@id/task_hour"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_baseline_timer_24"
                app:layout_constraintTop_toBottomOf="@id/user_atached"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/task_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:tooltipText="clicker pour description"
                android:textColor="@color/purple_200"
                android:drawableLeft="@drawable/ic_baseline_description_24"
                app:layout_constraintTop_toBottomOf="@id/duration"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <Switch
                android:id="@+id/isdone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/task_desc"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageButton
                android:id="@+id/edit_imageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_baseline_edit_24"
                app:layout_constraintTop_toBottomOf="@id/remove_imageButton"
                app:layout_constraintRight_toRightOf="parent"
                android:backgroundTint="@color/white"
                android:tint="@color/purple_700"
                android:tooltipText="Modifier"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>